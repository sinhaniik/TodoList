<%- include('header'); -%>

<div class="box" id="heading">
	<h1><%= mainHeading %></h1>
</div>

<div class="box">
	<% for(let i = 0 ; i < newItem.length; i++){ %>
	<div class="item">
		<input type="checkbox" />
		<p><%= newItem[i] %></p>
	</div>
	<% } %>

	<!-- THIS FOR SEND REQUEST OT THE .get("/") ROUTE -->

	<form action="/" class="item" method="post">
		<label for="name"></label>
		<input name="name" type="text" / placeholder="new items" autocomplete="off">
		<button type="submit" name="list" value="<%= mainHeading %>">+</button>
	</form>
</div>

<%- include('footer'); -%>
